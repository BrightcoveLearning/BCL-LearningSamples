<!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd"><Runtime>  <Theme name="Deluxe" style="Light" bodyFont="Verdana" titleFont="Verdana Bold" linkFont="verdana">    <Style id="default"><![CDATA[        .titleText {        fontSize: 12;        active: #A81E28;        disabled: #A8AAAD;        rollover: #A81E28;      selected: #A81E28;      fontFace: "Verdana";        }        .bodyText {        fontSize: 11;        active: #666666;        disabled: #A8AAAD;        rollover: #666666;        }        .linkText {fontSize: 11;}        ]]></Style><Style id="currentVideoTitle"><![CDATA[      .titleText {      active: #00A4F4;      rollover: #8DC63F;      selected: #00A4F4;      }      .bodyText {      active: #666666;      }      ]]></Style>    <Style class="TileList"><![CDATA[      .titleText {      active: #00A4F4;      disabled: #A1A1A1;      rollover: #8DC63F;      selected: #00B1B0;      }      .bodyText {      active: #666666;      disabled: #A1A1A1;      rollover: #666666;      selected: #666666;      }      .border {        gradientTop: #CCCCCC;        gradientBottom: #CCCCCC;      }      ]]></Style>    <Style id="playlistTabs"><![CDATA[    .tabs {      text: #666666;      rolloverText: #8DC63F;      selectedText: #00B1B0;      fontFace: "Verdana";      fontSize: 15;      }      ]]>    </Style>  </Theme>  <Layout id="application" width="720" height="888" backgroundImage="http://files.brightcove.com/reliv-player-background.png" gutter="10" padding="10" boxType="vbox">    <ChromelessVideoPlayer height="394" id="videoPlayer" video="{videoList.selectedItem}"/>    <HBox>      <VBox width="600" gutter="3">        <TitleLabel id="currentVideoTitle" text="{videoPlayer.video.displayName}" size="24" height="30" truncate="true"/>        <Label text="{videoPlayer.video.shortDescription}" height="54" size="14" multiline="true" truncate="true"/>      </VBox>      <HBox vAlign="top" hAlign="right">        <Label text="Time:" height="14"/>        <Label text="{format(videoPlayer.mediaDuration, SecondsTimecodeFormatter)}" height="14"/>      </HBox>    </HBox>    <VBox gutter="0" padding="0">    <TabBar id="playlistTabs" height="30" labelBuffer="30"/>        <Canvas id="listBorderBox" width="700" height="330" backgroundImage="http://files.brightcove.com/reliv-playlist-background.png">        <TileList id="videoList" y="40" data="{playlistTabs.selectedItem.videoDTOs}" columnWidth="135" columnGutter="6" rowHeight="150" numRows="2" rowGutter="6" height="320" width="700" x="10">      <ListItem boxType="vbox" padding="2" gutter="2">        <ThumbnailButton source="{currentItem.thumbnailURL}" width="130" height="73"/>        <TitleLabel text="{currentItem.displayName}" size="10" height="14" truncate="true"/>        <Label text="{currentItem.shortDescription}" multiline="true" size="10" height="36" truncate="true"/>          <HBox>            <Label text="{format(currentItem.length, MillisecondsTimecodeFormatter)}" size="11" height="12" hAlign="right"/>            <Spacer width="4"/>            </HBox><Spacer height="4"/>      </ListItem>          </TileList>      </Canvas>      </VBox>  </Layout></Runtime>