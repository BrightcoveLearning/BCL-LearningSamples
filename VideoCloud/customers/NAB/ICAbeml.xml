<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd"><Runtime>  <Theme name="Deluxe" style="Dark"/>  <!-- Change the height and width values in the Layout tag below to size the player differently or remove them and specify the height and with the Edit Template dialog -->  <Layout boxType="vbox" padding="5" gutter="5">    <ChromelessVideoPlayer id="videoPlayer"/>    <!-- To make the images appear only when a video is playing, like a true logo overlay, add the attribute visible="{videoPlayer.playing}" to the VBox tag below -->    <HBox vAlign="middle" hAlign="right" width="100%" height="55" includeInLayout="{!videoPlayer.fullscreen}">        <Image id="overlayImage" source="http://img.brightcove.com/NAB_BrightcoveOverlay.png" width="136" height="55" url="http://go.brightcove.com/content/en-brightcove-media" alpha="1"/>    </HBox>  </Layout></Runtime>