<Runtime>
  <Theme name="Deluxe" style="Light">
    <Style id="videoPlayer">
      <![CDATA[
      .video {
        background: #02B0EF;
      }
      .playerChrome {
        gradientTop: #F3C141;
        gradientMiddle: #F3C141;
        gradientBottom: #F3C141;
        border: #F3C141;
      }
      .buttons {
        text: #000000;
        rolloverText: #666666;
        disabledText: #CCCCCC;
        icons: #000000;
        rolloverIcons: #666666;
        disabledIcons: #CCCCCC;
      }
      .menuButton {
        borderGradientTop: #666666;
