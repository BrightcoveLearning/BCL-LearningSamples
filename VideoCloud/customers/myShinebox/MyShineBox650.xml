<!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd">
<Runtime>  <Theme name="Deluxe" style="Light">    <Style id="default"><![CDATA[.titleText {fontSize: 12;}.bodyText {fontSize: 10;}.linkText {fontSize: 10;}]]></Style>  </Theme>  <Layout id="application" width="650" height="414" boxType="vbox" padding="6" gutter="4">    <HBox height="40" vAlign="bottom" gutter="9">      <Image id="logo" width="300" scaleMode="scaleDown" hAlign="left" vAlign="bottom"/>      <TabBar id="playlistTabs" height="22" tabAlign="right" hideSingleTab="true"/>    </HBox>    <HBox height="255" gutter="6">      <ChromelessVideoPlayer id="videoPlayer" width="400" video="{videoList.selectedItem}"/>      <List id="videoList" rowHeight="66" automaticAdvance="true" data="{playlistTabs.selectedItem.videoDTOs}" selectOnClick="true" itemInsetV="4" itemLeading="2">        <ListItem boxType="hbox" vAlign="middle">          <Spacer width="8"/>          <VBox width="72" height="60" vAlign="middle">            <ThumbnailButton height="40" data="{currentItem}" source="{currentItem.thumbnailURL}"/>          </VBox>          <Spacer width="7"/>          <VBox>            <Spacer height="3"/>            <TitleLabel height="14" size="12" text="{currentItem.displayName}" truncate="true"/>            <Label height="48" size="10" multiline="true" text="{currentItem.shortDescription}" truncate="true"/>          </VBox>          <Spacer width="3"/>        </ListItem>      </List>    </HBox>    <VBox gutter="15">      <HBox height="32">        <Spacer width="6"/>        <VBox>          <TitleLabel height="24" id="videoTitle" text="{videoPlayer.video.displayName}" selected="true" size="18" truncate="true"/>
          <Label height="30" size="12" multiline="true" truncate="true" text="{videoPlayer.video.shortDescription}"/>          <Canvas>            <Link x="1" y="-5" size="10" id="relatedLink" text="{videoPlayer.video.linkText}" vAlign="bottom" url="{videoPlayer.video.linkURL}"/>          </Canvas>        </VBox>      </HBox>    </VBox>  </Layout></Runtime>