<!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd">
<Runtime>  <Theme name="Deluxe" style="Light">    <Style id="default"><![CDATA[.titleText {fontSize: 12;}.bodyText {fontSize: 10;}.linkText {fontSize: 10;}]]></Style>  </Theme>  <Layout id="application" width="475" height="347" boxType="vbox" padding="6" gutter="4">    <HBox height="40" vAlign="bottom" gutter="9">      <Image id="logo" width="200" scaleMode="scaleDown" hAlign="left" vAlign="bottom"/>      <TabBar id="playlistTabs" height="20" tabAlign="right" hideSingleTab="true"/>    </HBox>    <HBox height="199" gutter="6">      <ChromelessVideoPlayer id="videoPlayer" width="300" video="{videoList.selectedItem}"/>      <List id="videoList" rowHeight="52" automaticAdvance="true" data="{playlistTabs.selectedItem.videoDTOs}" selectOnClick="true" itemInsetV="4" itemLeading="2">        <ListItem boxType="hbox" vAlign="middle">          <Spacer width="2"/>          <VBox width="43" height="52" vAlign="middle">            <ThumbnailButton height="24" data="{currentItem}" source="{currentItem.thumbnailURL}"/>          </VBox>          <Spacer width="2"/>          <VBox>            <Spacer height="1"/>            <TitleLabel height="12" size="10" text="{currentItem.displayName}" truncate="true"/>            <Label height="38" multiline="true" text="{currentItem.shortDescription}" truncate="true"/>          </VBox>          <Spacer width="1"/>        </ListItem>      </List>    </HBox>    <VBox gutter="15">      <HBox height="32">        <Spacer width="6"/>        <VBox>          <TitleLabel height="24" id="videoTitle" text="{videoPlayer.video.displayName}" selected="true" size="18" truncate="true"/>
                    <Label height="30" size="12" multiline="true" truncate="true" text="{videoPlayer.video.shortDescription}"/>          <Canvas>            <Link x="1" y="-5" size="10" id="relatedLink" text="{videoPlayer.video.linkText}" vAlign="bottom" url="{videoPlayer.video.linkURL}"/>          </Canvas>        </VBox>
        </HBox>    </VBox>  </Layout></Runtime>