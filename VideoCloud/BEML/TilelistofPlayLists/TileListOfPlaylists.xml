<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Runtime SYSTEM "http://admin.brightcove.com/dtds/beml_rt.dtd">
<Runtime>  <Theme name="Deluxe" style="Light"/>  <Layout width="470" height="264">    <ChromelessVideoPlayer id="videoPlayer" video="{videoList.selectedItem}"/>		<TabBar id="playlistTabs" visible="false"/>
		<TileList id="playlistTiles" y="50" height="120" columnWidth="130" rowHeight="120" columnGutter="4" rowGutter="0" depth="10" visible="{!videoPlayer.playing}" noInitialSelection="true">      <ListItem boxType="vbox" padding="4">        <ThumbnailButton source="{currentItem.thumbnailURL}" tooltip="{currentItem.shortDescription}"/>        <TitleLabel text="{currentItem.displayName}" height="12" size="10"/>      </ListItem>    </TileList>    <List id="videoList" automaticAdvance="true" noInitialSelection="false" visible="false">      <ListItem boxType="vbox" padding="4">        <TitleLabel text="{currentItem.displayName}" height="12" size="10"/>      </ListItem>    </List>  </Layout></Runtime>
